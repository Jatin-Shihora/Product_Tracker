<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/productConfigBackgroundColor"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/product_image_vertical_padding"
        android:paddingTop="@dimen/product_image_vertical_padding">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_product_image_photo_grid"
            style="@style/ConstraintTopCenterHorizontalStyle"
            android:layout_width="@dimen/match_constraint_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/recyclerview_product_image_photo_grid_horizontal_margin"
            android:layout_marginLeft="@dimen/recyclerview_product_image_photo_grid_horizontal_margin"
            android:layout_marginRight="@dimen/recyclerview_product_image_photo_grid_horizontal_margin"
            android:layout_marginStart="@dimen/recyclerview_product_image_photo_grid_horizontal_margin" />

        <TextView
            android:id="@+id/text_product_image_empty_grid"
            style="@style/ConstraintCenterInParentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_product_image_empty_grid_margin"
            android:gravity="center"
            android:text="@string/product_image_empty_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constrainedWidth="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>