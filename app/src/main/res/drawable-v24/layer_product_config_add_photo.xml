

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#64000000" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white"
                android:dashGap="2dp"
                android:dashWidth="4dp" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:drawable="@drawable/ic_product_config_add_photo"
        android:gravity="center"
        android:left="5dp"
        android:right="7dp"
        android:top="6dp" />
</layer-list>